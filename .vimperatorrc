"=============================================================================
" GENERAL
"=============================================================================
"let mapleader='\'
set history=100
set focuscontent
set complete=lsbf
set defsearch=g
set nextpattern=\bnext,^>$,^(>>|≫|＞)$,^(>|≫|＞),(>|≫|＞)$,\bmore\b,次回?(へ|の?(記事|ページ|エントリ)),進む
set previouspattern=\bprev|previous\b,^<$,^(<<|≪)$,^(<|≪),(<|≪)$,前回?(へ|の?(記事|ページ|エントリ)),戻る

"=============================================================================
" KEY MAPPING
"=============================================================================
nnoremap j 5j
nnoremap k 5k

"=============================================================================
" DISPLAY
"=============================================================================
noremap ! :set invusermode<CR>

"=============================================================================
" EDIT
"=============================================================================
"テキストエリア等
"set noinsertmode
"エディタを設定
"set editor=C:/Users/tshimada/AppData/Local/GVim/gvim.exe

"=============================================================================
" HINT/SEARCH
"=============================================================================
set hlsearch
set ignorecase
set hintmatching=custom

"=============================================================================
" COMMAND
"=============================================================================
cmap <C-n> <TAB>
cmap <C-p> <S-TAB>

"=============================================================================
" PLUGIN
"=============================================================================
let g:smooziee_scroll_amount="150"
let g:smooziee_scroll_interval="16"
let g:caret_hint_xpath="//div"

"=============================================================================
" APPEARANCE
"=============================================================================
set toolbars=none,navigation,tabs
set status=none,input,location
hi CmdLine background-color:#dbeaf9;
hi CmdOutput background-color:blue; "?
hi CompDesc background-color:transparent; width:50%; color:#888;
hi CompGroup background-color:#fff;
hi CompGroup>*>*:nth-child(2n)>*:nth-child(1) background-color:#f4f4f4;
hi CompGroup>*>*:nth-child(2n)>*:nth-child(2) background-color:#f4f4f4;
hi CompGroup>*>*[selected]:nth-child(2n)>*:nth-child(1) background-color:#ffec8b;
hi CompGroup>*>*[selected]:nth-child(2n)>*:nth-child(2) background-color:#ffec8b;
hi CompResult width:50%; padding:.2em .5em; background-color:transparent; font-size:14px;
hi CompTitle padding:.7em .5em; background:-moz-linear-gradient(19% 75% 90deg, #dbdbdb, #d9d9d9, #e7e7e7 100%); font-size:16px; font-weight:bold;
hi ErrorMsg color:#c00;
hi Normal background-color:#dbeaf9; margin-top:-1px; padding:3px 0;
hi Hint margin:-.3em 0 0 -.3em; padding:.2em .4em; border:1px solid rgba(255, 255, 255, .9); border-radius:2px; background-color:rgba(0, 0, 0, .6); box-shadow:2px 2px 3px rgba(0, 0, 0, .2); color:#fff; font-family:Monaco,Inconsolata,Consolas; font-size:11px; line-height:1; text-shadow:0 0 1.5px #000;
hi HintActive background-color:#fc0; color:#000; box-shadow:1px 1px 6px rgba(0,0,0,.2);
hi HintElem background-color:#ff8; color:#000;
hi Indicator background-color:blue; color:red;
hi Message backgroundo-color:blue; color:red;
hi PromptText backgruond-color:transparent; color:#666; font-family:Monaco,Inconsolata,Consolas; font-weight:bold; text-shadow:1px 1px 0 #fff;
hi Title display:inline-block; padding:.3em; background-color:#dbeaf9; color:#000;
hi StatusLine font-size:12px; color:#333;

"=============================================================================
" MISC
"=============================================================================
javascript <<EOM
liberator.globalVariables.copy_templates = [
  { label: '0 URL',    value: '%URL%' },
  { label: '1 titleAndURL',    value: '%TITLE%\n%URL%' },
  { label: '2 title',          value: '%TITLE%', map: ',y' },
  { label: '3 anchor',         value: '<a href="%URL%">%TITLE%</a>' },
  { label: '4 selanchor',      value: '<a href="%URL%" title="%TITLE%">%SEL%</a>' },
  { label: '5 htmlblockquote', value: '<blockquote cite="%URL%" title="%TITLE%">%HTMLSEL%</blockquote>' },
];
EOM
